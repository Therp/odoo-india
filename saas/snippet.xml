<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<template id="saas" inherit_id="website.snippets" name="Snippet Subscribe">

			<xpath expr="//div[@id='snippet_content']" position="inside">
				<div data-snippet-id="text-image" data-selector-children=".oe_structure, [data-oe-type=html]">
					<div class="oe_snippet_thumbnail">
						<img class="oe_snippet_thumbnail_img" src="/website/static/src/img/blocks/block_button.png" />
						<span class="oe_snippet_thumbnail_title">SaaS Instance Big</span>
					</div>
					<section class="oe_snippet_body mb32 mt32">
					   <br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/>
						<div class="container">
							<div class="row">
								<div
									style="background-color: rgba(0,0,0,0.5); padding: 16px; border-radius:5px"
									class="col-md-6 col-md-offset-3">
									<form action="/saas/create_instance" method="post" class="form-inline">
										<button style="margin-left: 10px;" type="submit"
											class="btn btn-primary pull-right">Create Website</button>
										<div class="input-group">
											<input name="instance" type="text" placeholder="your-company-name"
												class="form-control" />
											<span class="input-group-addon">.odoo.co.in</span>
										</div>
									</form>
								</div>
							</div>

						</div>
					</section>
				</div>
				
				<div data-snippet-id="text-image" data-selector-children=".oe_structure, [data-oe-type=html]"> 
                    <div class="oe_snippet_thumbnail">
                        <img class="oe_snippet_thumbnail_img" src="/website/static/src/img/blocks/block_button.png" />
                        <span class="oe_snippet_thumbnail_title">SaaS Instance</span>
                    </div>
                    <section class="oe_snippet_body mb32 mt32">
                        <div class="container">
                            <div class="row">
                                <div
                                    style="background-color: rgba(0,0,0,0.5); padding: 16px; border-radius:5px"
                                    class="col-md-6 col-md-offset-3">
                                    <form action="/saas/create_instance" method="post" class="form-inline">
                                        <button style="margin-left: 10px;" type="submit"
                                            class="btn btn-primary pull-right">Create Website</button>
                                        <div class="input-group">
                                            <input name="instance" type="text" placeholder="your-company-name"
                                                class="form-control" />
                                            <span class="input-group-addon">.odoo.co.in</span>
                                        </div>
                                    </form>
                                </div>
                            </div>

                        </div>
                    </section>
                </div>
			</xpath>
		</template>
	</data>
</openerp>
