<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="sale_order_dates_commitments_view" model="ir.ui.view">
            <field name="name">sale.order.dates.commitments.view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <field name="date_order" position="after">
                    <field name="ex_work_date" required="1" on_change="onchange_shipping_time(ex_work_date, shipping_time)"/>
                    <field name="shipping_time" required="1" on_change="onchange_shipping_time(ex_work_date, shipping_time)"/>
                    <field name="destination_date" required="1"/>
                </field>
                <field name="date_order" position="attributes">
                    <attribute name="string">Creation Date</attribute>
                </field>
            </field>
        </record>

    </data>
</openerp>
        