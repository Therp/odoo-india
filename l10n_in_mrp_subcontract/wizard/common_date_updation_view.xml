<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record id="view_common_date_updation" model="ir.ui.view">
			<field name="name">Date Updation Wizard</field>
			<field name="model">common.date.updation</field>
			<field name="arch" type="xml">
				<form string="Date Updation" version="7.0">
					<group>
						<h3>
							<group>
								<field name="date_to_update" />
							</group>
						</h3>
						<group />
					</group>
					<footer>
						<button name="to_update" string="_Apply" type="object"
							class="oe_highlight" />
						or
						<button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>


        <record id="action_change_common_date_update" model="ir.actions.act_window">
            <field name="name">Date Updation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">common.date.updation</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="action_change_common_date_update_end" model="ir.actions.act_window">
            <field name="name">Date Updation</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">common.date.updation</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

	</data>
</openerp>

