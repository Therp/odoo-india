<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_split_production_order_qty" model="ir.ui.view">
            <field name="name">Split Production Order Quantity</field>
            <field name="model">split.production.order.qty</field>
            <field name="arch" type="xml">
                <form string="Split Production Order Quantity" version="7.0">
                    <group>
                        <field name="product_id"/>
                        <field name="qty" />
                    </group>
                    <footer>
                        <button name="split_qty" string="_Apply" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

    </data>
</openerp>

